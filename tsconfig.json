{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "target": "ES2023",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "paths": {
      "@client/*": [
        "./src/client/*"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@managers/*": [
        "./src/managers/*"
      ],
      "@structures/*": [
        "./src/structures/*"
      ],
      "@typescript/*": [
          "./src/typescript/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
